<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="530dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#2323"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/workoutName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workout"
            android:textSize="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/workoutBodyPart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Workout body-part"
            android:textSize="15dp"
            android:layout_marginBottom="10dp"/>

        <ImageView
            android:id="@+id/workoutImage"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:src="@drawable/bench_press"
            android:scaleType="fitCenter"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_below="@+id/workoutImage"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/workoutDesc"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Simple text" />

            </ScrollView>

            <Button
                android:id="@+id/closeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:text="close"/>


        </LinearLayout>


    </LinearLayout>

</RelativeLayout>